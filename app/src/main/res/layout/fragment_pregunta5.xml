<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ladrillos"
    tools:context=".Pregunta5">

    <TextView
        android:id="@+id/enunciadoPregunta5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="casual"
        android:text="@string/pregunta5"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/preg5resp1"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/bmw"
        android:onClick="onClick"
        android:text="@string/botonBMW"
        app:layout_constraintBottom_toTopOf="@+id/preg5resp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/preg5resp2"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/audi"
        android:onClick="onClick"
        android:text="@string/botonAudi"
        app:layout_constraintBottom_toTopOf="@+id/preg5resp3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/preg5resp3"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/renault"
        android:onClick="onClick"
        android:text="@string/botonRenault"
        app:layout_constraintBottom_toTopOf="@+id/preg5resp4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/preg5resp4"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="60dp"
        android:drawableLeft="@drawable/apple"
        android:onClick="onClick"
        android:text="@string/botonApple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>