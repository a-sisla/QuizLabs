<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ladrillos"
    tools:context=".Questions" >

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="347dp"
        android:layout_height="307dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="casual"
        android:text="@string/valorVacio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/respuesta1"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:hint="@string/valorVacio"
        android:onClick="onClick"
        android:text="@string/valorVacio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/respuesta2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/respuesta2"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:onClick="onClick"
        android:text="@string/valorVacio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/respuesta3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/respuesta3"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:onClick="onClick"
        android:text="@string/valorVacio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/respuesta4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/valorVacio" />

    <Button
        android:id="@+id/respuesta4"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:onClick="onClick"
        android:text="@string/valorVacio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>